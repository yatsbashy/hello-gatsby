{
  "bracketSpacing": true,
  "printWidth": 100,
  "proseWrap": "preserve",
  "singleQuote": false,
  "trailingComma": "es5",
  "useTabs": true,
  "tabWidth": 4,
  "endOfLine": "lf",
  "semi": false,
  "overrides": [
    {
      "files": "**/*.{json,yaml,yml}",
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.css",
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ]
}
